---
import type { Headline } from '~/types';
import { twMerge } from 'tailwind-merge';

const {
  title = await Astro.slots.render('title'),
  subtitle = await Astro.slots.render('subtitle'),
  tagline,
  classes = {},
  position,
} = Astro.props as Headline;

const {
  container: containerClass = 'max-w-3xl',
  tagline: taglineClass = 'font-bold uppercase tracking-wide text-dark tagline-fs',
  title: titleClass = 'text-dark font-bold tracking-loose',
  subtitle: subtitleClass = 'text-xl text-dark',
} = classes;
---

<style>
  #headline .tagline-fs {
    font-size: clamp(0.8125rem, 1.6vw, 1.15rem);
  }
</style>

{
  (title || subtitle || tagline) && (
    <div
      id="headline"
      class={twMerge(
        ` ${position === 'start' ? 'text-start' : position === 'end' ? 'text-end' : 'text-center'} md:mx-auto`,
        containerClass
      )}
    >
      {tagline && (
        <p data-aos="fade-up-sm" data-aos-delay="200" class={(twMerge(''), taglineClass)} set:html={tagline} />
      )}
      {title && (
        <h2
          data-aos="fade-up-sm"
          data-aos-delay="300"
          class={twMerge('leading-tight text-2xl-c font-bold ', titleClass)}
          set:html={title}
        />
      )}

      {subtitle && (
        <p
          data-aos="fade-up-sm"
          data-aos-delay="400"
          class={twMerge('mt-2 text-dark', subtitleClass)}
          set:html={subtitle}
        />
      )}
    </div>
  )
}
